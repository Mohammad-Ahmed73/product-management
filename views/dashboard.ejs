<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Document</title>
</head>

<body>
    <header class="bg-dark text-white py-3">
        <div class="container">
            <div class="row justify-content-between align-items-center">
                <div class="col-sm-4">
                    <h1 class="mb-0">PMD</h1>
                </div>
                <div class="col-sm-8 text-end">
                    <nav class="">
                        <ul class="list-inline list-unstyled mb-0">
                            <li class="list-inline-item"><a href="/">Home</a></li>
                            <li class="list-inline-item"><a href="/dashboard">Dashboard</a></li>
                            <li class="list-inline-item"><a href="/logout">Logout</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <div class="container-lg py-5">
        <!-- Product Listing -->
        <% if (products.length===0) { %>
            <p>No products available.</p>
            <% } else { %>
                <section class="product-list mb-4">
                    <h3 class="mb-3">Product List</h3>
                    <table class="w-100">
                        <tr>
                            <th>Product ID</th>
                            <th>Product Name</th>
                            <th>Product Price</th>
                            <th>Product Qunatity</th>
                            <th>Action</th>
                        </tr>
                        <% products.forEach( (product)=> { %>
                            <tr>
                                <td>
                                    <%= product.product_id %>
                                </td>
                                <td>
                                    <%= product.product_name %>
                                </td>
                                <td>
                                    $<%= product.product_price %>
                                </td>
                                <td>
                                    <%= product.product_quantity %>
                                </td>
                                <td>
                                    <div>
                                        <button type="button" data-type="edit" class="edit-product">
                                            edit
                                        </button>
                                        <button type="button" data-type="delete" class="delete-product"
                                            ><a href="/deleteproduct/<%=product.product_id %>">Delete</a></button>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                    </table>
                </section>
                <% } %>

                    <form action="/editProduct/" class="" method="post">
                        <% products.forEach( (product)=> { %>
                        <div>
                            <input type="hidden" name="product_id" value=<%= product.product_id %>> 
                            <input type="text" value=<%= product.product_name %> id="edit-product-name" name="product_name">
                            <input type="number" name="product_price" value=<%= product.product_price %> id="edit-product-price">
                            <input type="number" name="product_quantity" value=<%= product.product_quantity %> id="edit-product-quantity">
                            <button type="submit" id="update-product-btn">
                                update
                                <a href="/editProduct/">Update</a>
                            </button>
                        </div>
                        <% }) %>
                    </form>



                    <!-- Product Addition Form for Admin -->
                    <section class="product-form mb-4">
                        <h2 class="mb-3">Add Product</h2>
                        <form action="/dashboard" method="post" id="addProductForm">
                            <div class="mb-3">
                                <label for="product-name" class="form-label">Product Name</label>
                                <input type="text" name="product_name" class="form-control" id="" required>
                            </div>
                            <div class="mb-3">
                                <label for="product-price" class="form-label">Product Price</label>
                                <input type="number" name="product_price" class="form-control" id="" required>
                            </div>
                            <div class="mb-3">
                                <label for="product-quantity" class="form-label">Product Quantity</label>
                                <input type="number" name="product_quantity" class="form-control" id="" required>
                            </div>
                            <button type="submit" class="btn btn-primary w-auto">Add Product</button>
                        </form>
                    </section>
    </div>

    <footer class="bg-dark text-white py-3">
        <div class="container text-center">
            <p class="mb-0">&copy; 2023 Product Management Dashboard</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script src="/script.js" type="javascript"></script> -->
    <script>
        // Get all the delete product buttons
        const deleteButtons = document.querySelectorAll('.delete-product');

        // Add event listener to each delete button
        deleteButtons.forEach(button => {
            button.addEventListener('click', () => {
                const dataPid = button.getAttribute('data-pid');
                console.log(`Clicked Delete for product ID: ${dataPid}`);
                // Perform delete operation or other logic here
            });
        });
    </script>
</body>

</html>